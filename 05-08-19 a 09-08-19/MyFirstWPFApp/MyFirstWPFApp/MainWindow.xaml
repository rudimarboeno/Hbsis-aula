<Window x:Class="MyFirstWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
   
                
       
                    <Button Background="OrangeRed"
                BorderBrush="Aquamarine"
                RangeBase.ValueChanged="Button_ValueChanged"
                Content="Button" 
                HorizontalAlignment="Left" 
                Margin="335,205,0,0" 
                VerticalAlignment="Top" 
                Width="124" 
                RenderTransformOrigin="0.586,0.844" 
                Height="28"
                >


                        <Button.RenderTransform>
                            <TransformGroup>

                                <ScaleTransform/>
                                <SkewTransform AngleX="0.402"/>
                                <RotateTransform Angle="358.84"/>
                                <TranslateTransform X="0.166" Y="0.002"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
            
         
      
    </Grid>
</Window>
