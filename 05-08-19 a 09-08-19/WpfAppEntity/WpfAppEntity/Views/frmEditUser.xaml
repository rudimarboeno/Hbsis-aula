<Window x:Class="WpfAppEntity.Views.frmEditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppEntity.Views"
        mc:Ignorable="d"
        Title="frmEditUser" Height="350" Width="420" Loaded="Window_Loaded">
    <Grid Margin="0,0,4.2,0.8">
        <TextBox Name="tbxName" HorizontalAlignment="Left" Height="38" Margin="85,35,0,0" TextWrapping="Wrap" Text="Usuario" VerticalAlignment="Top" Width="260"/>
        <TextBox Name="tbxLogin" HorizontalAlignment="Left" Height="35" Margin="85,100,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="260"/>
        <TextBox Name="tbxSenha" HorizontalAlignment="Left" Height="33" Margin="85,162,0,0" TextWrapping="Wrap" Text="Senha" VerticalAlignment="Top" Width="260"/>
        <Button Content="Salvar" Click="Button_Click" HorizontalAlignment="Left" Margin="85,240,0,0" VerticalAlignment="Top" Width="260" Height="50"/>

    </Grid>
</Window>
